alias: 'Logger - Light'
initial_state: 'on'

trigger:
  - platform: state
    entity_id:
      - light.gateway_light_7c49eb1c097b
      - light.main_light

condition:
- condition: template
  value_template: '{{ trigger.from_state.state != trigger.to_state.state }}'

action:
- service: logbook.log
  data_template:
    name: "{{trigger.to_state.name}}"
    message: " changed to {{trigger.to_state.state}}"
    entity_id: "{{trigger.entity_id}}"
#    domain: light